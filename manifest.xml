<package>
  <description brief="Connects vicon output to OpenRAVE.">
        Openrave plugin that connects vicon output to openrave.
  </description>
  <author>Rafael Papallas, Dr Mehmet Dogar (m.r.dogar@leeds.ac.uk)</author>
  <license>BSD</license>
  <depend package="roscpp"/>
  <depend package="openrave"/>
  <depend package="std_msgs"/>
  <depend package="trajectory_msgs"/>
  <depend package="brics_actuator"/>
  <depend package="geometry_msgs"/>
  <depend package="tf"/>
  <export>
      <python path="${prefix}/pythonsrc"/>
      <openrave plugins="${prefix}/lib"/>
  </export>
</package>
